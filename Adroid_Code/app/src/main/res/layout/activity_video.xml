<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoActivity"
    android:orientation="vertical"
    android:background="#ffff">

    <!-- TODO: Update blank fragment layout -->

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="474dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_dog" />

    <TextView
        android:id="@+id/monitor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumbarungothic"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="17dp" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="2">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_stop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/fab_bigger_margin"
            app:backgroundTint="#3f79ff"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_stop" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_record"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/fab_bigger_margin"
            app:backgroundTint="#ffd933"
            app:maxImageSize="50dp"
            app:rippleColor="#00ff0000"
            app:srcCompat="@drawable/ic_record" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/fab_record"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/fab_bigger_margin"
            app:backgroundTint="#3f79ff"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_start" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_pause"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/fab_record"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/fab_bigger_margin"
            app:backgroundTint="#3f79ff"
            app:fabSize="normal"
            app:maxImageSize="50dp"
            app:srcCompat="@drawable/ic_pause" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_bigger_margin"
            app:backgroundTint="#ffd933"
            app:fabSize="mini"
            app:maxImageSize="25dp"
            app:srcCompat="@drawable/ic_send" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_send_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_bigger_margin"
            app:backgroundTint="#BDBDBD"
            app:fabSize="mini"
            app:maxImageSize="25dp"
            app:srcCompat="@drawable/ic_send" />


    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>